<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.burritopos.domain">
   <class name="Manager" table="employee">
   	  <meta attribute="class-description">This class contains manager object information.</meta>
	  <id name="employeeID" column="employeeid" type="java.lang.Integer" >
		<generator class="increment" />
	  </id>
          <property name="firstName" column="firstName" type="java.lang.String" />
          <property name="lastName" column="lastName" type="java.lang.String" />
          <property name="isManager" column="isManager" type="java.lang.Boolean" />
   </class>
</hibernate-mapping>